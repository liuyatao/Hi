<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/profile_setting_item" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="性别："
            style="@style/profile_setting_item_title"
            android:id="@+id/card_setting_title"/>
        <ImageView
            style="@style/profile_setting_item_image"
            android:id="@+id/card_setting_image"
          />
        <TextView
            style="@style/profile_setting_item_value"
            android:id="@+id/card_setting_value"
          />
    </RelativeLayout>
</android.support.v7.widget.CardView>